{# templates/Home/home.html.twig #}

{% extends "layout.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
  {# <link src="../public/build/app.css" rel="stylesheet"> #}
  {{ encore_entry_link_tags('home') }}

{% endblock %}

{% block title %}{{ parent() }} Liste des figures {% endblock %}

{% block body %}

{{ include("Parts/_header.html.twig") }}

<!-- Page Content -->
<div class="container-fluid" id="trick-container">
  {{ parent() }}

  <div class="row">
      <img src="../public/img/design/snowtrick-background.jpg" class="img-fluid" alt="Responsive image"> 
  </div>
  {% for message in app.flashes('success') %}
    <div class="col-12 alert alert-success alert-dismissible fade show mb-0 mt-1 text-center" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <i class="fa fa-check mx-2"></i>
      <strong>{{ message }}</strong>
    </div>
  {% endfor %}

  <!-- Scroll To Bottom Arrow-->
  <p class="float-right">
      <a href="javascript:;" id="scrollToBottom"><i class="fa fa-arrow-circle-down fa-3x"></i></a>
  </p>
  <!-- Tricks Section -->
    <div class="row text-center">
      {% for trick in tricks %}
        <div class="col-lg-2 col-md-5 col-xs-12 my-4 mx-4">
          <div class="card h-100">
            <h4 class="card-header">{{ trick.name }}</h4>
              <div class="float-right">
                <a href="{{ path('app_trick_edit', {'id': trick.id }) }}">
                  <i class="fas fa-pencil-alt"></i>
                </a>
                <a href="{{ path('app_trick_delete', {'id': trick.id }) }}" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{trick.name}} ?`)">
                  <i class="fas fa-trash-alt"></i>
                </a>
              </div>
              <div class="card-body">
                <a href="{{ path('app_trick_view', {'id': trick.id}) }}"><img class="card-img-top home border border-primary py-1 px-1 " src="../public/img/tricks/covers/{{ trick.fileName }}" alt="Trick"></a>
                <p class="card-text my-2"><strong>Ajouté le {{ trick.dateAdd | date('d/m/Y') }} à {{ trick.dateAdd | date('H:i') }}</strong></p>
                {# <p class="card-text">{{ trick.author }}</p> #}
              </div>
            <div class="card-footer">
              <a href="{{ path('app_trick_view', {'id': trick.id }) }}" class="btn btn-primary text-uppercase">Voir plus</a>
            </div>
          </div>
        </div>
      {% endfor %} 
    </div>

  <!-- Call to Action Section -->
    <div class="row mb-4">
      <div class="col-12 text-center">
        <button id="loadTrick" class="btn-primary btn-lg center-block text-uppercase" href="#">Voir plus de tricks</button>
      </div>
    </div>

  <!-- Scroll To Top Arrow-->
    <div class="float-right">
      <a href="javascript:;" id="scrollToTop"><i class="fa fa-arrow-circle-up fa-3x"></i></a>
    </div>

<!-- /.container -->
    {% block javascripts %}
      {{ parent() }}
      {{ encore_entry_script_tags('app') }}
    {% endblock %} 

{% endblock %}