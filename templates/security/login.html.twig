{% extends 'layout.html.twig' %}

{% block stylesheets %}

  {{ parent() }}
  <link src="../public/build/app.css" rel="stylesheet">

{% endblock %}

{% block title %}SnowTricks - Connexion{% endblock %}

{% block body %}

<!-- Page Content -->
<div class="container-fluid">
  {{ parent() }}

  <div class="row justify-content-center" style="margin-top: 4%;">
  {% for message in app.flashes('success') %}
        <div class="col-12 alert alert-success alert-dismissible fade show mb-0 mt-1 text-center" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
          <i class="fa fa-check mx-2"></i>
          <strong>{{ message }}</strong>
        </div>
      {% endfor %}
  </div>

  <div class="row justify-content-center" style="margin-top: 10%;">
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 bg-light card mt-7 p-5">
      <h1 class="h3 mb-3 font-weight-normal text-center text-uppercase">Connexion</h1>
        <div class="card-body">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="inputText">Nom d'utilisateur</label>
                <input type="text" value="{{ last_username }}" name="_username" id="inputText" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>
            
        </form>

        <p class="text-center">
            {# <a href="{{ path('account_password_forgot') }}">Mot de passe oublié ?</a><br>
            <a href="{{ path('account_registration') }}">Inscription</a> #}
        </p>
      </div>
    </div>
  </div>
</div>
{% endblock %}
