                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--Header end-->

        <!-- Nav header start-->
        <div class="nav-header">
            <div class="brand-logo">
                <a href="{{ path('app_trick_home') }}">
                    <b class="logo-abbr"><img src="../uploads/images/defaults/snowboard.jpg" alt="logo"> </b>
                    <span class="logo-compact"><img src="../img/tricks/covers/snowtrick-banner.png" alt=""></span>
                    <span class="brand-title">
                        {# <img src="images/logo-text.png" alt=""> #}
                    </span>
                </a>
            </div>
        </div>
        <!--Nav header end-->

 {# {{ include("Parts/_dashboard_layout.html.twig") }} #}

        <div class="content-body my-4">
            <div class="container-fluid">
                <div class="row justify-content-center">

                
                    <div class="col-lg-6">
                        <div class="card card-small px-4 py-4 mb-4 pt-3">
                            <div class="card-header border-bottom">
                                <h4 class="card-title text-uppercase mx-3 text-center">Mon Profil</h4>
                                <hr>
                                <div class="row">
                                    <div class="col-lg-6"> 
                                        <h5 class="m-0 text-uppercase mb-1">Détails de mon compte</h6>
                                        <div class="mb-3 mx-auto">
                                            <img class="rounded" src="http://localhost/OCR-P6/public/img/users/{{ app.user.avatar }}" alt="Avatar" width="150">
                                        </div>
                                    </div>
                                    <div class="col-lg-6"> 
                                        <p class="mb-0" style="visibility:hidden">{{ app.user.id }}<p>
                                        <h5 class="mb-1">Pseudo</h4>
                                        <h6 class="mb-1">{{ app.user.username }}</h5>
                                        <hr>
                                        <h5 class="mb-1">Email</h4>
                                        <h6 class="mb-1">{{ app.user.email }}</h5>
                                    </div>
                                </div>
                            </div> 
                            {# <h4 class="card-title text-uppercase mx-3">Profile</h4> #}
                            <div class="card-header border-bottom">
                                <h5 class="m-0">Modifier mon compte</h6>
                            </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item p-3">
                                        <div class="row">
                                            <div class="col">
                                                {{ form_start(form) }}
                                                    <div class="form-row">
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.username) }}
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.email) }}
                                                        </div>
                                                        <div class="form-group col-md-12">
                                                            {{ form_row(form.file) }}
                                                        </div>
                                                    </div>
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                    <div class="row text-center">
                                                        <div class="form-group col-lg-12 mt-4 text-center">
                                                            <button type="submit" class="btn btn-primary text-uppercase">Enregistrer les modifications</button>
                                                        </div>
                                                    </div>
                                                {{ form_end(form) }}
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        <!--footer-->
        {{ include("Parts/_footer.html.twig") }}
        <!--end-footer-->

        <!--Sidebar start-->
        <div class="nk-sidebar">           
