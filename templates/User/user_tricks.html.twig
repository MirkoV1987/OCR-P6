{# templates/User/profile.html.twig #}

{% extends "base.html.twig" %}

{% block stylesheets %}

  {{ parent() }}
  <link src="../public/build/app.css" rel="stylesheet">

{% endblock %}

{% block title %}SnowTricks - Mes tricks{% endblock %}

{% block body %}

   <!--Header start-->
        <div class="header">    
            <div class="header-content clearfix">
                <div class="nav-control">
                    <div class="hamburger">
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative"   data-toggle="dropdown">
                                <span class="activity active"></span>
                                {# <img src="../public/img/users/{{ user.avatar }}" height="40" width="40" alt="utilisateur"> #}
                                <img src="http://localhost/OCR-P6/public/img/users/{{ app.user.avatar }}" height="40" width="40" alt="utilisateur">
                            </div>
                            <div class="drop-down dropdown-profile dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a href="#"><i class="icon-lock"></i> <span>Mot de passe</span></a>
                                        </li>                        
                                        <hr class="my-2">
                                        <li>
                                            <a href="{{ path('app_user_logout') }}"><i class="icon-key"></i> <span>Déconnexion</span></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--Header end-->

        <!-- Nav header start-->
        <div class="nav-header">
            <div class="brand-logo">
                <a href="{{ path('app_trick_home') }}">
                    <b class="logo-abbr"><img src="../uploads/images/defaults/snowboard.jpg" alt="logo"> </b>
                    <span class="logo-compact"><img src="../img/tricks/covers/snowtrick-banner.png" alt=""></span>
                    <span class="brand-title">
                        {# <img src="images/logo-text.png" alt=""> #}
                    </span>
                </a>
            </div>
        </div>
        <!--Nav header end-->

        <div class="content-body my-4">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card card-small px-4 py-4 mb-4 pt-3">
                            <div class="card-header border-bottom">
                                <h1 class="card-title text-uppercase mx-3 text-center">Mes tricks</h1>
                                <hr>

                            {% for trick in tricks %}
                                <div class="row">
                                    <div class="col-lg-6"> 
                                        <div class="mb-3 mx-auto">
                                            <img class="rounded border border-primary py-1 px-1" src="http://localhost/OCR-P6/public/img/tricks/covers/{{ trick.fileName }}" alt="Trick" width="300"></br>
                                        </div>
                                        <div class="my-2">
                                            <a href="{{ path('app_trick_edit', {'id': trick.id }) }}">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a href="{{ path('app_trick_delete', {'id': trick.id }) }}" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{trick.name}} ?`)">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-lg-6"> 
                                        <p class="mb-0" style="visibility:hidden">{{ app.user.id }}<p>
                                        <h4 class="mb-1 text-uppercase">Titre</h4>
                                        <h5 class="mb-1">{{ trick.name }}</h5>
                                        <hr>
                                        <h4 class="mb-1 text-uppercase">Date</h4>
                                        <h5 class="mb-1">Ajouté le {{ trick.dateAdd | date('d/m/Y') }} à {{ trick.dateAdd | date('H:i') }}</h5>
                                        <hr>
                                        <a href="{{ path('app_trick_view', {'id': trick.id }) }}" class="btn btn-primary text-uppercase my-1 float-right">Voir plus</a>
                                    </div>
                                </div>
                            {% endfor %}

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>

                </div>
            </div>
        </div>

        <!--footer-->
        {{ include("Parts/_footer.html.twig") }}
        <!--end-footer-->

        <!--Sidebar start-->
        {{ include("Parts/_sidebar.html.twig") }}
        <!--end-sidebar-->

{% endblock %}
