{# templates/User/user_password_update.html.twig #}

{% extends "base.html.twig" %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block title %}SnowTricks - Modifier mon mot de passe{% endblock %}

{% block body %}

    <!--Header start-->
        {{ include("Parts/_account_header.html.twig") }}
    <!--Header end-->

    <div class="content-body my-4">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card card-small px-4 py-4 mb-4 pt-3">
                        <div class="card-header border-bottom">
                            <h1 class="card-title text-uppercase mx-3 text-center">Modifier mon mot de passe</h1>
                            <hr>
                            <div class="card-body">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary text-uppercase"><i class="fas fa-check"></i> Modifier</button>
                            </div>
                            {{ form_end(form) }}
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--footer-->
    {{ include("Parts/_footer.html.twig") }}
    <!--end-footer-->

    <!--Sidebar start-->
    {{ include("Parts/_sidebar.html.twig") }}
    <!--end-sidebar-->

{% endblock %}
